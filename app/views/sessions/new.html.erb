<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
      <h5 class="my-0 mr-md-auto font-weight-normal">Task management system</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <span class="p-2 text-dark" ><%= link_to "Sign Up", signup_path, class: "btn btn-outline-primary" %></span>
        <span class="p-2 text-dark" ><%= link_to "Sign In", signin_path, class: "btn btn-outline-primary" %></span>
        <span class="p-2 text-dark" ><%= link_to "Sign Out", signout_path, class: " btn btn-outline-primary" %></span>
      </nav>
</div>
<p id="alert"><%= alert %></p>
<h1>Sign in</h1>
<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field_a">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign in",  class: "btn btn-primary" %>
  </div>
<% end %>