<p id="notice"><%= notice %></p>
<div class="alert alert-primary" role="alert">
  <table>
  	<tr>
  		<td><strong>Title:</strong><%= @task.title %></td>
  	</tr>
  	<tr>
      <td><strong>Description:</strong><%= @task.description %></td>
    </tr>
    <tr>
      <td><strong>Priority:</strong><%= @task.priority %></td>
    </tr>
    <tr>
      <td><strong>Due date:</strong><%= @task.due_date %></td>
    </tr>
  </table>
<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-info" %> 
