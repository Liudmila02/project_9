<% if current_user %>
<div class="col-md-12">
	<h1>My Tasks</h1>
  <div class="buffer-top">
	<%= link_to "New task", new_task_path, class: 'btn btn-success' %>
  </div>
  <div class="buffer-top1">
  	<table><% @tasks.each do |task| %>
	  <tr>
      <td><%= link_to task.title, task %></td>
      <td><%= link_to 'Edit', edit_task_path(task), class:"btn btn-warning" %></td>
      <td><%= link_to 'Destroy', task, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Complete', complete_task_path(task), data: {method: :put}, class: 'done action', class:"btn btn-info" %></td>
    </tr><% end %>
    </table>
  </div>
	<hr/>
  <div class="buffer-top1">
  	<table><% @completed_tasks.each do |task| %>
	    <tr>
        <td><%= link_to task.title, task %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', task, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Complete', complete_task_path(task), data: {method: :put}, class: 'done action', class:"btn btn-info" %></td>
      </tr><% end %>
    </table>
  </div>
</div>
<% else %>
<h2>Before you create a task, sign in!</h2>
<% end %>