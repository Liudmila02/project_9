<div class="col-md-12">
	<h1>My Tasks</h1>
  <div class="buffer-top">
	<%= link_to "New task", new_task_path, class: 'btn btn-success' %>
  </div>
  
  <div class="buffer-top">
	<% @tasks.each do |task| %>
	  <%= render partial: 'task', object: task %>
	<% end %>
  </div>

	<hr/>
  <div class="buffer-top">
	<% @completed_tasks.each do |task| %>
	  <%= render partial: 'task', object: task %>
	<% end %>
  </div>
</div>